@model GeointellectTest.Models.QueryToApiModal
@{
    ViewData["Title"] = "Home Page";
    Dictionary<string, string> SavedProperty = ViewData["SavedProperty"] as Dictionary<string, string>;
}

<div class="text">
    <div class="row">
    <div class="col">
        <form class="form-inline" asp-action="Index">
            <div class="form-group col">
                <label asp-for="URL" class="control-label"></label>
                <input asp-for="URL" class="form-control" />
                <span asp-validation-for="URL" class="text-danger"></span>
            </div>
            <input type="submit" value="Отправить запрос" class="btn btn-primary" value="@ViewData["ApiUrl"]"/>
        </form>

        <h4>Ответ службы: </h4>
        <p>@ViewData["ResponseMsg"]</p>
        @if(SavedProperty is not null)
        {
            <h4>Сохронённые параметры: </h4>
            <table class="table" HorizontalAlign="Center">
            @foreach(var item in SavedProperty)
            {
                <tr>
                    <td>
                        @item.Key
                    </td>
                    <td>
                        @item.Value
                    </td>
                </tr>    
            }
            </table>
        }
    </div>
</div>
</div>
